<!--index/index.wxml-->
<easy-view height='1000' margin='50rpx 0 0 0' reverse='col' type='betweenCenter'>
  <easy-icon-button icon='/imgs/easyUI.png' text='一行代码的艺术之旅' iconWidth='250' iconHeight='250' width='300' height='300' fontSize='32'></easy-icon-button>
  <easy-view cus='cus-list'>
    <e-base-list
      id='{{ index + 1 }}'
      wx:for='{{ list }}'
      title='{{ item.title }}'
      subTitle='{{ item.text }}'
      lineColor='{{ item.lineColor }}'
      catchlisttap='onTap'>
    </e-base-list>
  </easy-view>
</easy-view>
<easy-view cus='cus-view'>
  <easy-view width='650' margin='0 50rpx' type='betweenCenter'>
    <text class='font-text'>开始></text>
    <text class='font-text' style='color: #666'>关于></text>
  </easy-view>
</easy-view>