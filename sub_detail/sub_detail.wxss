/* sub_detail/sub_detail.wxss */
page {
  background-color: white;
  padding: 0 30rpx 60rpx 30rpx;
  width: auto;
}
text {
  color: #333;
}
.h1 {
  font-size: 28rpx;
  line-height: 64rpx;
  font-weight: 100;
  margin-top: 30rpx;
}
.content {
  font-size: 24rpx;
  line-height: 36rpx;
  font-weight: 100;
  display: block;
  padding: 0 18rpx;
  color: #8d8d8d;
  font-style: italic;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  /* height: 2.5rem; */
  align-items: center;
  border-bottom: 1px solid #F6F8F9
}
.td {
  font-size: 24rpx;
  padding: 10rpx 12rpx;
  display: flex;
  align-items: center;
  min-height: 2.4rem;
  width: 100%;
}
.name {
  color: #4183c4;
}
.bg-w{
  background: snow;
}
.th {
  width: 100%;
  background: #F6F8F9;
  color: #8d8d8d;
  min-height: 1.5rem;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  padding: 10rpx 12rpx;
}